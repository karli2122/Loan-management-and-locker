{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "admin-development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_MODE": "admin"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "admin-preview": {
      "distribution": "internal",
      "env": {
        "APP_MODE": "admin"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "preview"
    },
    "admin-production": {
      "distribution": "store",
      "env": {
        "APP_MODE": "admin"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "production"
    },
    "client-development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_MODE": "client"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "client-preview": {
      "distribution": "internal",
      "env": {
        "APP_MODE": "client"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "preview"
    },
    "client-production": {
      "distribution": "store",
      "env": {
        "APP_MODE": "client"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "production"
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./service-account-key.json",
        "track": "internal"
      }
    }
  }
}
