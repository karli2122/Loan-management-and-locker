const IS_ADMIN_APP = process.env.APP_MODE === 'admin';

// SECURITY FIX: Fail fast if backend URL not configured in production
if (process.env.NODE_ENV === 'production' && !process.env.EXPO_PUBLIC_BACKEND_URL) {
  throw new Error('EXPO_PUBLIC_BACKEND_URL environment variable is required in production');
}

export default {
  expo: {
    name: IS_ADMIN_APP ? "Loan Admin" : "Loan Client",
    slug: IS_ADMIN_APP ? "loans" : "client",
    version: "1.1.0",
    orientation: "portrait",
    icon: "./assets/images/icon.png",
    scheme: IS_ADMIN_APP ? "loanadmin" : "loanclient",
    userInterfaceStyle: "dark",
    newArchEnabled: true,
    splash: {
      image: "./assets/images/splash-image.png",
      resizeMode: "contain",
      backgroundColor: "#0F172A"
    },
    ios: {
      supportsTablet: true,
      bundleIdentifier: IS_ADMIN_APP ? "com.emi.admin" : "com.emi.client"
    },
    android: {
      adaptiveIcon: {
        foregroundImage: "./assets/images/adaptive-icon.png",
        backgroundColor: "#0F172A"
      },
      package: IS_ADMIN_APP ? "com.emi.admin" : "com.emi.client",
      versionCode: 2,
      permissions: IS_ADMIN_APP
        ? [
            "ACCESS_FINE_LOCATION",
            "ACCESS_COARSE_LOCATION",
            "INTERNET",
            "ACCESS_NETWORK_STATE"
          ]
        : [
            "ACCESS_FINE_LOCATION",
            "ACCESS_COARSE_LOCATION",
            "INTERNET",
            "ACCESS_NETWORK_STATE",
            "BIND_DEVICE_ADMIN",
            "RECEIVE_BOOT_COMPLETED",
            "SYSTEM_ALERT_WINDOW",
            "WAKE_LOCK",
            "DISABLE_KEYGUARD"
          ]
    },
    web: {
      bundler: "metro",
      output: "single",
      favicon: "./assets/images/favicon.png",
      registerServiceWorker: false
    },
    plugins: [
      "expo-router",
      [
        "expo-splash-screen",
        {
          image: "./assets/images/splash-image.png",
          imageWidth: 200,
          resizeMode: "contain",
          backgroundColor: "#0F172A"
        }
      ],
      // Device Admin plugin for Client app only
      ...(IS_ADMIN_APP ? [] : ["emi-device-admin"])
    ],
    experiments: {
      typedRoutes: true
    },
    extra: {
      appMode: IS_ADMIN_APP ? "admin" : "client",
      // SECURITY FIX: No hardcoded fallback URL
      backendUrl: process.env.EXPO_PUBLIC_BACKEND_URL,
      eas: {
        projectId: IS_ADMIN_APP
          ? "7be3aec1-6fef-4200-9987-5868c4320a07"
          : "0cb46d92-e754-4a76-a24b-c69c70ccd850",
        cli: {
          appVersionSource: "remote"
        }
      }
    }
  }
};
